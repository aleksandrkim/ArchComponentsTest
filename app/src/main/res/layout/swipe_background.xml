<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:id="@+id/view_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/swipeBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/delete_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="@dimen/material_typography_edge_padding"
        android:layout_marginStart="@dimen/material_typography_edge_padding"
        android:foregroundGravity="center"
        android:src="@drawable/ic_delete_24dp"/>

</FrameLayout>